# Production Environment Configuration Template
# Copy this file and set the actual values for your production environment
# This file should NOT be committed to version control with real values

# ============================================================================
# RAILWAY CONFIGURATION
# ============================================================================
# Railway CLI authentication token (get from Railway dashboard > Account > Tokens)
RAILWAY_TOKEN=f0604666-8094-46cd-a8e0-a7c622e70640

# Railway project ID for production (get from Railway project URL or CLI)
RAILWAY_PROJECT_ID_PROD=your_production_project_id_here

# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
ENVIRONMENT=production

# ============================================================================
# SERVICE URLS (Auto-configured by Railway)
# ============================================================================
# These URLs are automatically set by Railway during deployment
# You can override them if using custom domains
FRONTEND_URL_PROD=https://anime-frontend-production.railway.app
BACKEND_URL_PROD=https://anime-backend-production.railway.app

# Database URL is automatically provided by Railway PostgreSQL service
# Format: postgresql://username:password@host:port/database
DATABASE_URL_PROD=postgresql://user:pass@host:port/anime_db_prod

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Frontend-Backend Communication
# Production should use specific origins for security
CORS_ORIGINS_PROD=https://anime-frontend-production.railway.app

# Additional allowed origins (comma-separated)
# Add custom domains or CDN URLs if applicable
CORS_ADDITIONAL_ORIGINS_PROD=

# CORS credentials support (true/false)
CORS_ALLOW_CREDENTIALS=true

# CORS allowed methods (comma-separated)
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# CORS allowed headers (comma-separated)
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# CORS max age for preflight requests (seconds)
CORS_MAX_AGE=86400

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_NAME=anime_db_prod
DB_USER=anime_user
DB_HOST=localhost
DB_PORT=5432

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=300
DB_POOL_PRE_PING=true

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
DEBUG=false
LOG_LEVEL=info

# API Configuration
API_PREFIX=/api/v1
API_TITLE=Anime API
API_VERSION=1.0.0

# Security settings
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# HEALTH CHECK CONFIGURATION
# ============================================================================
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_INTERVAL=60

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Security headers
SECURE_HEADERS=true
FORCE_HTTPS=true

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: https:
CSP_CONNECT_SRC='self' https:

# ============================================================================
# MONITORING AND LOGGING
# ============================================================================
# Enable detailed logging
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_TRACKING=true

# Log format (json/text)
LOG_FORMAT=json

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
# Uvicorn workers (for production deployment)
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features
ENABLE_DOCS=false
ENABLE_REDOC=false
ENABLE_METRICS=true
